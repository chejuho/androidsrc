<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/LinearLayout01" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:background="#FFFFFF"
		android:orientation="vertical"
		xmlns:android="http://schemas.android.com/apk/res/android">
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/listheadPart"
             android:layout_gravity="center_vertical|fill_vertical"
             android:gravity="center"
             android:background="#EEE8AA"
             android:layout_height="wrap_content"
             android:layout_width="fill_parent">
            <LinearLayout 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:padding="5dip"
			android:layout_weight="2"
			android:gravity="left|center_vertical">
				<!-- <ImageButton 
				android:id="@+id/listsettingBtn" 
				android:gravity="center"
				style="@style/settingBtn"
				android:textColor="@color/black"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content">
				</ImageButton>-->
				<ImageButton 
				android:id="@+id/listimportBtn" 
				android:gravity="center|center_vertical"
				style="@style/importBtn"
				android:minHeight="67px"
				android:minWidth="54px"
				android:paddingLeft="15dip"
				android:textColor="@color/black"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content">
				</ImageButton>
			</LinearLayout>
			<LinearLayout 
			android:paddingRight="15dip"
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center">
				<TextView 
				android:id="@+id/title" 
				android:text="test"
				android:gravity="center"
				android:textSize="22sp"
				android:textColor="@color/black"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content">
				</TextView>
			</LinearLayout>
			
			<LinearLayout 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:padding="5dip"
			android:layout_weight="2"
			android:gravity="right|center_vertical">
				<ImageButton 
				android:id="@+id/webopenBtn" 
				android:gravity="center"
				style="@style/webopenbtn"
				android:paddingLeft="15dip"
				android:textColor="@color/black"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content">
				</ImageButton>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:id="@+id/listdisplayPart"
			android:gravity="center_vertical">
			<ListView android:id="@+id/memorizerlistview"
				android:scrollingCache="false"
	    		android:layout_height="wrap_content"
	    		android:layout_width="fill_parent"/>
	    	<TextView 
				android:id="@+id/empty"
				android:text="@string/memorizerEmpty" 
				android:textColor="#000000"
				android:textSize="22sp"
				android:padding="10px"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"/>
		</LinearLayout>
    	
    	
</LinearLayout>