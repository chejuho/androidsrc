<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" 
  android:layout_width="fill_parent">
  	
	<ImageView 
		android:id="@+id/fileimageIcon" 
		android:padding="10px"
		android:minHeight="64dip"
		android:layout_weight="0" 
		android:layout_marginRight="2px" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:layout_gravity="left|center_vertical|fill_vertical">
	</ImageView>
	<LinearLayout 
		android:layout_gravity="center_vertical|fill_vertical"
		android:layout_height="fill_parent" 
		android:layout_width="fill_parent">
			<LinearLayout 
             android:gravity="left|center_vertical"
             android:layout_weight="1"
             android:layout_height="fill_parent"
             android:layout_width="fill_parent">
				<TextView 
					android:text="textFileName"
					android:textColor="#000000"
					android:layout_height="wrap_content"  
				 	android:layout_width="fill_parent" 
				 	android:textSize="18sp" 
				 	android:id="@+id/textFileName"/>
			</LinearLayout>
			<LinearLayout 
             android:gravity="right|center_vertical"
             android:layout_weight="3.5"
             android:layout_height="fill_parent"
             android:layout_width="fill_parent">
				<TextView 
					android:text="textFileSize"
					android:textColor="#000000"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="13sp"
			  		android:id="@+id/textFileSize"/>
		  	</LinearLayout>
	</LinearLayout>

</LinearLayout>
